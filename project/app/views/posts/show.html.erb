<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<div id="comments">
  <strong>Comments:</strong>
  <ul>
    <% @post.comments.each do |comment| %>
      <li>
        <%= comment.represents_band.nil? ? comment.user.username : Band.find(comment.represents_band).name %>: <%= comment.text %> 
        [ <%= link_to 'Edit', edit_band_post_comment_path(@band, @post, comment) %>  | 
        <%= link_to 'Delete', band_post_comment_path(@band, @post, comment), method: :delete %> ]
      </li>
    <% end %>
  </ul>
  <%= link_to 'Add Comment', new_band_post_comment_path(@band, @post) %>
</div>

<%= link_to 'Edit', edit_band_post_path(@band, @post) %> |
<%= link_to 'Delete', band_post_path(@band, @post), method: :delete, data: { confirm: 'Delete this post?' } %> |
<%= link_to 'Back', band_posts_path %>
