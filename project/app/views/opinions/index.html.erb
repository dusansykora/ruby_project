<style>
  table, th, td {
    border: 1px solid black;
  }
  table {
    border-collapse: collapse;
  }
  th, td {
    padding: 10px;
  }
  .block {
    margin-bottom: 20px;
    margin-top: 20px;
  }
</style>

<h1>Opinions of Band</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @band.opinions.each do |opinion| %>
      <tr>
        <td><%= opinion.text %></td>
        <td>LICK</td>
        <td>DIS-LICK</td>
        <td><%= link_to 'Edit', edit_band_opinion_path(@band, opinion) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opinion', new_band_opinion_path(@band) %> |
<%= link_to 'Back', @band %>
