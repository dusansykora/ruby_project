<%= form_for [@band, @event] do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field form-group">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time, default: DateTime.now, start_year: DateTime.now.year, end_year: DateTime.now.year + 10 %>
  </div>
  <div class="field form-group">
    <%= f.label :duration %><br>
    <%= f.number_field :duration, min: 1 %>
  </div>
  <div class="field form-group">
    <%= f.label :place %><br>
    <%= f.text_field :place %>
  </div>
  <div class="field form-group">
    <%= f.label :info %><br>
    <%= f.text_area :info %>
  </div>
  <div class="actions form-group">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to 'Cancel', band_events_path(@band), class: "btn btn-default" %>
  </div>
<% end %>
