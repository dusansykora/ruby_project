<style>
  table, th, td {
    border: 1px solid black;
  }
  table {
    border-collapse: collapse;
  }
  th, td {
    padding: 10px;
  }
  .block {
    margin-bottom: 20px;
    margin-top: 20px;
  }
</style>

<%= render "shared/band" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Release Date</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @band.albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.release_date %></td>
        <td><%= link_to 'Show', band_album_path(@band, album) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_band_album_path %>
<%= link_to 'Back', @band %>
