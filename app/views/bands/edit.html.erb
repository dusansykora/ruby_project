<h1>Editing Band</h1>

<%= form_for(@band) do |f| %>
  <% if @band.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@band.errors.count, "error") %> prohibited this band from being saved:</h2>

      <ul>
      <% @band.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :establish_year %><br>
    <%= f.number_field :establish_year, min: 1900, max: Time.now.year %>
  </div>
  <div class="field">
    <%= f.label :genre %><br>
    <%= f.select :genre, @genre_names, selected: @band.genre.name %>
  </div>
  <div class="form-group">
    <%= f.label :cover_photo %>
    <%= f.file_field :cover_photo %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<h2>Members</h2>
<div class="row">
  <div class=" col-lg-4 col-md-4">
  <table class="table">
    <thead>
      <tr>
        <th>Member username</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
      <% @band.users.each do |member| %>
        <tr>
          <td><%= member.username %></td>
          <td><%= link_to 'X', member_remove_path(@band, member.id), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
      </div>
</div>

<%= form_tag member_add_path(@band) do %>
  <div class="field">
    <%= label_tag :username %><br>
    <%= text_field_tag :username %>
  </div>
  <div class="actions">
    <%= submit_tag "Add member" %>
  </div>
<% end %>


