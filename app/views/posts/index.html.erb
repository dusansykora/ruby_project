<style>
  table, th, td {
    border: 1px solid black;
  }
  table {
    border-collapse: collapse;
  }
  th, td {
    padding: 10px;
  }
  .block {
    margin-bottom: 20px;
    margin-top: 20px;
  }
</style>

<%= render "shared/band" %>
<div class="container">
  <% @band.posts.each do |post| %>
    <div class="row">
      <div class="col-md-8">
        <h2>
          <%= post.title %>
          <small><%= link_to 'Edit', edit_band_post_path(@band, post) %></small>
        </h2>
        <p><span class="glyphicon glyphicon-time"></span> Posted on <%= post.created_at %></p>
        <hr>
        <p><%= post.text %></p>
        <%= link_to "Show comments (#{post.comments.count})", band_post_path(@band, post, anchor: 'comments'), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  <hr>
  <% if !current_user.nil? && current_user.band == @band %>
    <a role="button" class="btn btn-default" href="<%= new_band_post_path %>">New Post</a>
  <% end %>
</div>
